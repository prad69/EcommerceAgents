# Production Environment Configuration
# WARNING: This is a template. Replace all placeholder values with actual production values.

# Application Settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production

# Database Configuration
DB_PASSWORD=your-secure-database-password
DATABASE_URL=postgresql://ecommerce:${DB_PASSWORD}@postgres:5432/ecommerce_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Message Queue Configuration
RABBITMQ_PASSWORD=your-secure-rabbitmq-password
RABBITMQ_URL=amqp://ecommerce:${RABBITMQ_PASSWORD}@rabbitmq:5672/

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-secure-elasticsearch-password

# External API Keys (Replace with actual values)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Email Configuration (for notifications)
SMTP_SERVER=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-email@company.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# Monitoring Configuration
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_RETENTION_TIME=30d

# Security Settings
ALLOWED_HOSTS=your-domain.com,api.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER=/app/uploads

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log

# Caching Settings
CACHE_TTL=3600  # 1 hour
CACHE_MAX_ENTRIES=10000

# Background Task Settings
CELERY_BROKER_URL=${RABBITMQ_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}
CELERY_WORKER_CONCURRENCY=4

# Performance Settings
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50

# Health Check Settings
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=60

# Backup Settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=s3  # or local, gcs, azure

# SSL/TLS Settings (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your-domain.pem
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# CDN Configuration (optional)
CDN_URL=https://cdn.your-domain.com
STATIC_URL=${CDN_URL}/static/
MEDIA_URL=${CDN_URL}/media/

# Analytics and Tracking
ANALYTICS_ENABLED=true
TRACKING_ID=your-analytics-tracking-id

# Feature Flags
ENABLE_CHATBOT=true
ENABLE_RECOMMENDATIONS=true
ENABLE_PRODUCT_DESCRIPTIONS=true
ENABLE_REVIEW_ANALYSIS=true
ENABLE_AUTO_SCALING=true
ENABLE_PERFORMANCE_MONITORING=true

# Scaling Configuration
MIN_REPLICAS=3
MAX_REPLICAS=20
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# Data Retention Policies
LOGS_RETENTION_DAYS=90
METRICS_RETENTION_DAYS=365
ANALYTICS_RETENTION_DAYS=730

# Timezone and Localization
TIMEZONE=UTC
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de