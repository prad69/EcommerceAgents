# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ecommerce_agents
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=ecommerce_agents

# Vector Database (Pinecone)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=ecommerce-products

# Alternative Vector Database (Weaviate)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# AI/ML API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# FastAPI Configuration
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External APIs
AMAZON_PRODUCT_API_KEY=your_amazon_api_key
BESTBUY_API_KEY=your_bestbuy_api_key

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=True

# Development
ENVIRONMENT=development